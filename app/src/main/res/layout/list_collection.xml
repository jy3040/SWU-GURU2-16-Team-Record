<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="12dp"
    android:id="@+id/list_collection">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_list_collection_img"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:adjustViewBounds="true"
        app:riv_corner_radius="8dp"
        android:scaleType="centerCrop"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_list_collection_title"

        android:text="이름"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_list_collection"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/main_1"
        android:secondaryProgressTint="@color/main_1"
        android:progressBackgroundTint="@color/main_2"
        />

</LinearLayout>